log_level: debug

meta_client_name: "e2e-test"
meta_network_name: "e2e-devnet"

beacon:
  endpoint: ${BEACON_ENDPOINT}
  timeout: 30s

pid:
  process_names:
    # Execution layer clients
    - geth
    - reth
    - besu
    - nethermind
    - erigon
    - ethrex
    # Consensus layer clients
    - lighthouse
    - prysm
    - beacon-chain
    - teku
    - lodestar
    - nimbus
    - nimbus_beacon_node
    - nimbus_beacon_n  # truncated to 15 chars in /proc/*/comm
    # Java-based clients (besu, teku) run as 'java'
    - java
    # Node.js clients (lodestar) run as 'node' or 'MainThread'
    - node
    - MainThread

ring_buffer_size: 8388608
sync_poll_interval: 10s

sinks:
  raw:
    enabled: false
  slot:
    enabled: false
  window:
    enabled: false
  aggregated:
    enabled: true
    resolution:
      interval: 100ms
      slot_aligned: true
    clickhouse:
      endpoint: localhost:9000
      database: default
      table: aggregated_metrics
      batch_size: 5000
      flush_interval: 500ms
      migrations:
        enabled: true

health:
  addr: ":9090"
